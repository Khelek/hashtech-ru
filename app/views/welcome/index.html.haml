.span5
  .row
    - if @projects
      %a{ href: projects_index_path }
        %h3= t('projects')
      %table.table.table-striped
        %thead
          %tr.table-aligned
            %th
              %p.text-center.text-info= t('name')
            %th
              %p.text-center.text-info= t('site')
            %th
              %p.text-center.text-info= t('completed')
        - @projects.each do |project|
          %tr.table-aligned
            %th
              %p.text-center= project.name
            %th
              %a{ href: project.site }
                %p.text-center= project.site
            %th
              %p.text-center= project.completed
      %a.btn.btn-info{ href: projects_index_path }= t('.all_projects')
      %hr
.span6.offset1
  .row
    - if @partners
      %a{ href: partners_index_path }
        %h3= t('partners')
      %table.table.table-striped
        %thead
          %tr.table-aligned
            %th
              %p.text-center.text-info= t('name')
            %th
              %p.text-center.text-info= t('site')
            %th
              %p.text-center.text-info= t('logo')
        - @partners.each do |partner|
          %tr.table-aligned
            %th
              %p.text-center= partner.name
            %th
              %a{ href: partner.site }
                %p.text-center= partner.site
            %th
              %p.text-center
                %img.img-rounded.micro{ src: partner.logo_url(:small) }
      %a.btn.btn-info{ href: partners_index_path }= t('.all_partners')
      %hr
