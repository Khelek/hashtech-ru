%html

  %head
    %title Hashtech
    = stylesheet_link_tag    "bootstrap_and_overrides", media: "all"
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %a{ href: welcome_index_path }
      .hero-unit
        %h1= "#HASHTECH"
    .container
      .navbar-wrapper.navbar-big-text.navbar-size
        .navbar.navbar-static-top
          .navbar-inner
            %a.btn.btn-navbar{ "data-target" => ".nav-collapse", "data-toggle" => "collapse" }
            .nav-collapse.collapse
              %ul.nav
                %li
                  %a{ href: welcome_index_path }= t('home')
                %li
                  %a{ href: projects_path }= t('projects')
                %li
                  %a{ href: partners_path }= t('partners')
                %li
                  %a{ href: about_welcome_index_path }= t('about')
                %li
                  %a{ href: contacts_welcome_index_path }= t('contacts')
    .row-fluid
      .container.content
        = yield
